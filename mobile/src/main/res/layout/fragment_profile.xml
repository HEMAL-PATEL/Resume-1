<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_scroller"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_window"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/height_profile_cover_image" >

            <ImageView
                android:id="@+id/image_cover"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:contentDescription="@string/content_description"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/background_profile_cover_overlay" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24.0dip"
                android:layout_marginRight="24.0dip"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/image_avatar"
                        android:layout_width="@dimen/imageview_profile_avatar"
                        android:layout_height="@dimen/imageview_profile_avatar"
                        android:layout_marginRight="12.0dip"
                        android:background="@drawable/background_avatar"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/text_name"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/imageview_profile_avatar"
                        android:gravity="center"
                        android:textColor="@color/body_text_white"
                        android:textSize="@dimen/text_size_large" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_short_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.0dip"
                    android:lineSpacingExtra="@dimen/line_spacing"
                    android:textColor="@color/body_text_white"
                    android:textSize="@dimen/text_size_medium" />

                <TextView
                    android:id="@+id/text_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/line_spacing"
                    android:textColor="@color/body_text_white"
                    android:textSize="@dimen/text_size_medium"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6.0dip"
                    android:background="@drawable/label_white_border"
                    android:orientation="horizontal"
                    android:paddingBottom="4.0dip"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:paddingTop="4.0dip" >

                    <TextView
                        android:id="@+id/text_score"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="8.0dip"
                        android:gravity="center"
                        android:textColor="@color/body_text_white"
                        android:textSize="@dimen/text_size_large" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="resume"
                            android:textColor="@color/body_text_white"
                            android:textSize="@dimen/text_size_xxsmall" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Score"
                            android:textColor="@color/body_text_white"
                            android:textSize="@dimen/text_size_xxsmall" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/border_gray" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_profile_tab"
            android:orientation="horizontal" >

            <im.ene.lab.resume.widgets.CustomLinearLayout
                android:id="@+id/layout_friends_count"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:paddingBottom="8.0dip"
                android:paddingTop="8.0dip" >

                <TextView
                    android:id="@+id/text_friends_count"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2.0dip"
                    android:gravity="center"
                    android:textColor="@color/body_text_2"
                    android:textSize="@dimen/text_size_xxlarge"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="友達の数"
                    android:textColor="@color/body_text_2"
                    android:textSize="@dimen/text_size_small" />
            </im.ene.lab.resume.widgets.CustomLinearLayout>

            <View
                android:layout_width="1.0px"
                android:layout_height="fill_parent"
                android:background="@color/border_gray" />

            <im.ene.lab.resume.widgets.CustomLinearLayout
                android:id="@+id/layout_support_projects_count"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:paddingBottom="8.0dip"
                android:paddingTop="8.0dip" >

                <TextView
                    android:id="@+id/text_support_projects_count"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2.0dip"
                    android:gravity="center"
                    android:textColor="@color/body_text_2"
                    android:textSize="@dimen/text_size_xxlarge"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="応援の数"
                    android:textColor="@color/body_text_2"
                    android:textSize="@dimen/text_size_small" />
            </im.ene.lab.resume.widgets.CustomLinearLayout>

            <View
                android:layout_width="1.0px"
                android:layout_height="fill_parent"
                android:background="@color/border_gray" />

            <im.ene.lab.resume.widgets.CustomLinearLayout
                android:id="@+id/layout_bookmarks"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:paddingBottom="8.0dip"
                android:paddingTop="8.0dip" >

                <TextView
                    android:id="@+id/text_bookmark_projects_count"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2.0dip"
                    android:gravity="center"
                    android:textColor="@color/body_text_2"
                    android:textSize="@dimen/text_size_xxlarge"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="ブックマーク"
                    android:textColor="@color/body_text_2"
                    android:textSize="@dimen/text_size_small" />
            </im.ene.lab.resume.widgets.CustomLinearLayout>

            <im.ene.lab.resume.widgets.CustomRelativeLayout
                android:id="@+id/layout_facebook_link"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:paddingBottom="8.0dip"
                android:paddingTop="8.0dip"
                android:visibility="gone" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="f"
                    android:textColor="@color/body_text_2"
                    android:textSize="@dimen/text_size_xxlarge"
                    android:textStyle="bold" />
            </im.ene.lab.resume.widgets.CustomRelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/border_gray" />

        <LinearLayout
            android:id="@+id/layout_profile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="28.0dip"
            android:paddingLeft="@dimen/profile_horizontal_margin"
            android:paddingRight="@dimen/profile_horizontal_margin"
            android:paddingTop="4.0dip" />
    </LinearLayout>

</ScrollView>